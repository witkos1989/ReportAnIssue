@model ReportAnIssue.Models.Type

@if(ViewBag.Message != null)
{
    <p class="alert alert-danger">@ViewBag.Message</p> 
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dodaj użytkownika do typu usterki: @Html.DisplayFor(modelItem => Model.Name)</h4>
        <hr />
        @Html.Hidden("typeId", Model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Users, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.Editor("userMail", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "AccountRolesList", "AccountRole")
</div>
